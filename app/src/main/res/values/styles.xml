<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.Heading.Primary" parent="TextStyle">
        <item name="android:textSize">30sp</item>

    </style>

    <style name="TextStyle.Heading.Secondary" parent="TextStyle">
        <item name="android:textSize">22sp</item>
    </style>


        <style name="TextStyle.Title.Sub" parent="TextStyle">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="TextStyle.Title.Medium" parent="TextStyle">
        <item name="android:textSize">17sp</item>
    </style>


    <style name="TextStyle.Title.Small" parent="TextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Title.Tiny" parent="TextStyle">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">15dp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:gravity">center</item>

        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>

        <item name="rippleColor">@color/white</item>


    </style>

</resources>